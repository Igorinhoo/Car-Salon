
@{
    ViewData["Title"] = "Login";
}


<form class="card card-body">
  <div class="my-2">
        <div class="col px-1 my-4">
            <label for="input1" class="ms-2 position-absolute" style="margin-top: -0.75rem !important">
              <span class="h6 small bg-white text-muted px-1">Username</span>
          </label>
          <input type="text" class="form-control mt-2" id="input1">
      </div>
        <div class="col px-1 my-2">
          <label for="input2" class="ms-2 position-absolute" style="margin-top: -0.75rem !important">
              <span class="h6 small bg-white text-muted px-1">Password</span>
          </label>
          <input type="password" class="form-control mt-2" id="input2">
      </div>
        <div class="d-grid gap-2 col-6 mx-auto my-3">
            <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Main", "Administration")'">Log in</button>
      </div>
  </div>
</form>
