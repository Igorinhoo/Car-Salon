@using CarSalon.Web.Data;
@model ShopOrderVm

@{
    ViewData["Title"] = "Order Car";
}


<div class="text-center mb-4">
    <h1>Order car</h1>
</div>


<div class="container">
    <form asp-action="Add" method="post">
        <div class="row g-2">
            
                <div id="normalName" class="col textOnInput normalName col-md-4">
                    <label>Name</label>
                    <input asp-for="Order.Name" id="firstName" type="text" class="form-control" placeholder="First name" aria-label="First name ">
                </div>
            <div id="normalSurname" class="col textOnInput normalName col-md-4">
                    <label>Surname</label>
                    <input asp-for="Order.Surname" type="text" class="form-control" placeholder="Surname" aria-label="Surname">
                </div>
            
            <div id="firms" class="col textOnInput none col-md-8">
                <label>Firm name</label>
                <input asp-for="Order.Name" id="firmName" type="text" class="form-control" placeholder="Firm name" aria-label="Firm name">
            </div>

            <div class="form-check col d-flex flex-row bd-highlight mt-3 " >
                <div class="mx-5 align-bottom">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="Personal" checked>
                    <label class="form-check-label" for="Prywatnie">
                        Prywatnie
                    </label>
                </div>
                <div class="mx-5">
                    <input class="form-check-input" type="radio" name="flexRadioDefault" value="Firm">
                    <label class="form-check-label" for="Firm">
                        Na firmę
                    </label>
                </div>
            </div>
        </div>

        <div class="textOnInput">
            <label>Car type</label>
            <select class="form-select my-3" aria-label="Default select example" asp-for="Order.CarType" asp-items="Html.GetEnumSelectList<CarType>()">
            </select>
        </div>
        <div class="col textOnInput">
            <label>Price</label>
            <input asp-for="Order.Price" type="number" min="20000" step="100" value="20000" id="exampleInputAmount" class="form-control" placeholder="Price">
        </div>

        <div class="form-check col d-flex flex-row bd-highlight mt-2 py-2 border border-secondary textOnInput">
            <label>Condition</label>
                <div class="mx-5">
                    <input asp-for="Order.IsNew" class="form-check-input" type="radio" value="True" id="New" checked>
                    <label class="form-check-label no" for="New">
                        New
                    </label>
                </div>
                <div class="mx-5">
                    <input asp-for="Order.IsNew" class="form-check-input" type="radio" value="False" id="Used">
                    <label class="form-check-label no" for="Used">
                        Used
                    </label>
                </div>
        </div>

        <div class="md-form textOnInput my-3">
            <label>Phone number</label>
            <input asp-for="Order.PhoneNumber" type="tel" id="form1" class="form-control" placeholder="Type your phone number" pattern="[0-9]{3}[0-9]{3}[0-9]{3}">
   
        </div>

        <div class="textOnInput my-3">
            <label for="exampleFormControlInput1">Email address</label>
            <input asp-for="Order.Email" type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-primary">
                Order
            </button>
        </div>
    </form>
</div>

<script>
    var normal = document.getElementById("normalName");
    var normalSur = document.getElementById("normalSurname");
    var firms = document.getElementById("firms");
    const radioButtons = document.querySelectorAll('input[name="flexRadioDefault"]');
   
    for (const radioButton of radioButtons) {
        radioButton.addEventListener('change', showSelected);
    }

    function showSelected(e){
        if (this.checked) {
            if (this.value == "Firm") {
                firms.classList.remove("none");
                normal.classList.add("none");
                normalSur.classList.add("none");

                document.getElementById("firstName").disabled = true;
                document.getElementById("firmName").disabled = false;
            }
            else if(this.value == "Personal"){
        
                normal.classList.remove("none");
                normalSur.classList.remove("none");
                firms.classList.add("none");

                document.getElementById("firstName").disabled = false;
                document.getElementById("firmName").disabled = true;;

               
            }
        }
    }
        
</script>